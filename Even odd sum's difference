#include<stdio.h>
main()
{
	int n,i,esum=0,osum=0,diff;
	n<=1;
	printf("enter the range:\n");
	scanf("%d",&i);
	while(n<=i)
	{
		if(n%2==0)
		{
		esum=esum+n;
		}
		else
		{
		osum=osum+n;
	    }
	    n++;
	}
	    printf("even sum=%d\n",esum);
	    printf("odd sum=%d\n",osum);
	    printf("difference between odd sum and even sum=%d",osum-esum);
}
